{{#if errorMessage}}
<div class="error-message">{{ errorMessage }}</div>
{{/if}}

<form id="form" action="/signup" method="POST">
  <h2>Sign Up</h2>
  <label for="username">Username</label><br>
  <input type="text" name="username" placeholder="AnakinSkywalker" required minlength="5">

  <br><br>
  <label for="password">Password</label><br>
  <input type="password" name="password" placeholder="DeathStar" required minlength="5">
  <br><br>

  <button>Create account</button>
</form>